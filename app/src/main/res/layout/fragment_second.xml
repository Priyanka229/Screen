<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16bc7d">
    <LinearLayout
        android:id="@+id/frag_sec_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/frag_sec_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation Techniques"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            />
        <ImageView
            android:id="@+id/frag_sec_img"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/meditation"/>
        <TextView
            android:id="@+id/frag_sec_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn about the different meditation techniques and practice them"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_above="@+id/skip_btn"
        android:layout_marginBottom="@dimen/separator_margin_bottom"
        />
    <Button
        android:id="@+id/skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        />
    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        />

</RelativeLayout>